{
    "tasks": {
        "pre-commit": "deno lint && deno check **/*.ts && deno check **/*.tsx && deno fmt && deno task test-source && deno task test-e2e && deno task test-content && deno task build-artifacts && deno task test-artifacts",
        "test-source": "deno test catechism/source web",
        "test-content": "deno test --allow-read catechism/content",
        "test-artifacts": "deno test --allow-read catechism/artifacts",
        "test-e2e": "deno test --allow-read --allow-env e2e-tests",
        "build-artifacts": "deno run --allow-read --allow-write catechism/artifact-builders/build.ts",
        "build-mock-data": "deno run --allow-read --allow-write catechism/mock-data/run.ts && deno task build-artifacts",
        "web-app-start": "deno run -A --watch=static/,routes/ dev.ts",
        "build": "deno run -A dev.ts build",
        "preview": "deno run -A main.ts",
        "update-fresh": "deno run -A -r https://fresh.deno.dev/update ."
    },
    "fmt": {
        "indentWidth": 4,
        "lineWidth": 120,
        "singleQuote": true,
        "exclude": [
            "catechism/artifacts/*.json",
            "catechism/content/*.json",
            "_fresh"
        ]
    },
    "lint": {
        "rules": {
            "tags": [
                "fresh",
                "recommended"
            ]
        },
        "exclude": [
            "catechism/artifacts/*.json",
            "catechism/content/*.json",
            "_fresh"
        ]
    },
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "preact"
    },
    "imports": {
        "$deno/": "https://deno.land/std@0.166.0/",
        "$fresh/": "https://deno.land/x/fresh@1.4.3/",
        "preact": "https://esm.sh/preact@10.15.1",
        "preact/": "https://esm.sh/preact@10.15.1/",
        "preact-render-to-string": "https://esm.sh/*preact-render-to-string@6.2.1",
        "@preact/signals": "https://esm.sh/*@preact/signals@1.1.3",
        "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.2.3",
        "twind": "https://esm.sh/twind@0.16.19",
        "twind/": "https://esm.sh/twind@0.16.19/",
        "@twind/preset-autoprefix": "https://esm.sh/@twind/preset-autoprefix@1.0.7",
        "@twind/preset-tailwind": "https://esm.sh/@twind/preset-tailwind@1.1.4"
    }
}
