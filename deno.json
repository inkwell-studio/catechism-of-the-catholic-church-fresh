{
    "tasks": {
        "pre-commit": "deno lint && deno task test-source && deno fmt && deno task test-content && deno task build-artifacts && deno task test-artifacts",
        "test-source": "deno test catechism/source web-utils",
        "test-content": "deno test catechism/content",
        "test-artifacts": "deno test catechism/artifacts",
        "build-artifacts": "deno run --allow-write catechism/artifact-builders/build.ts",
        "build-mock-data": "deno run --allow-read --allow-write catechism/mock-data/run.ts && deno task build-artifacts",
        "web-app-start": "deno run -A --watch=static/,routes/ dev.ts"
    },
    "fmt": {
        "indentWidth": 4,
        "lineWidth": 120,
        "singleQuote": true,
        "exclude": [
            "catechism/artifacts/renderable-path-id_to_content.json",
            "catechism/artifacts/semantic-path_to_renderable-path-id.json",
            "catechism/artifacts/table-of-contents.json",
            "catechism/content/catechism.json"
        ]
    },
    "lint": {
        "rules": {
            "tags": [
                "fresh",
                "recommended"
            ]
        },
        "exclude": [
            "catechism/artifacts/renderable-path-id_to_content.json",
            "catechism/artifacts/semantic-path_to_renderable-path-id.json",
            "catechism/artifacts/table-of-contents.json",
            "catechism/content/catechism.json"
        ]
    },
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "preact"
    },
    "imports": {
        "$deno/": "https://deno.land/std@0.166.0/",
        "$fresh/": "https://deno.land/x/fresh@1.3.1/",
        "preact": "https://esm.sh/preact@10.15.1",
        "preact/": "https://esm.sh/preact@10.15.1/",
        "preact-render-to-string": "https://esm.sh/*preact-render-to-string@6.2.0",
        "@preact/signals": "https://esm.sh/*@preact/signals@1.1.3",
        "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.2.3",
        "twind": "https://esm.sh/twind@0.16.19",
        "twind/": "https://esm.sh/twind@0.16.19/",
        "@twind/core": "https://esm.sh/@twind/core@1.1.3",
        "@twind/preset-autoprefix": "https://esm.sh/@twind/preset-autoprefix@1.0.7",
        "@twind/preset-tailwind": "https://esm.sh/@twind/preset-tailwind@1.1.4"
    }
}
