{
    "tasks": {
        "pre-commit": "deno lint && deno check **/*.ts && deno check **/*.tsx && deno fmt && deno task test-source && deno task test-e2e && deno task test-content && deno task build-artifacts && deno task test-artifacts",
        "test-source": "deno test catechism/source website --ignore=website/e2e-tests",
        "test-content": "deno test --allow-read catechism/content",
        "test-artifacts": "deno test --allow-read catechism/artifacts",
        "test-e2e": "deno test --allow-read --allow-env website/e2e-tests",
        "build-artifacts": "deno run --allow-read --allow-write catechism/artifact-builders/build.ts",
        "build-mock-data": "deno run --allow-read --allow-write catechism/mock-data/run.ts && deno task build-artifacts",
        "web-app-start": "deno run -A --watch=website/static/,website/routes/ website/dev.ts",
        "build": "deno run -A website/dev.ts build",
        "preview": "deno run -A website/main.ts",
        "update-fresh": "deno run -A -r https://fresh.deno.dev/update .",
        "reload-cache": "deno cache --reload website/dev.ts && deno cache --reload website/main.ts"
    },
    "fmt": {
        "indentWidth": 4,
        "lineWidth": 120,
        "singleQuote": true,
        "exclude": ["catechism/artifacts/*.json", "catechism/content/*.json"]
    },
    "lint": {
        "rules": { "tags": ["fresh", "recommended"] },
        "exclude": ["catechism/artifacts/*.json", "catechism/content/*.json"]
    },
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "preact"
    },
    "imports": {
        "$deno/": "https://deno.land/std@0.208.0/",
        "$fresh/": "https://deno.land/x/fresh@1.6.8/",
        "preact": "https://esm.sh/preact@10.19.6",
        "preact/": "https://esm.sh/preact@10.19.6/",
        "@preact/signals": "https://esm.sh/*@preact/signals@1.2.2",
        "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.5.1",
        "tailwindcss": "npm:tailwindcss@3.3.5",
        "tailwindcss/": "npm:/tailwindcss@3.3.5/",
        "tailwindcss/plugin": "npm:/tailwindcss@3.3.5/plugin.js"
    },
    "exclude": ["**/_fresh/*"]
}
