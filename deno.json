{
    "tasks": {
        "build-mock-data": "deno run --allow-read --allow-write content/mock-data/build.ts",
        "web-app-start": "deno run -A --watch=static/,routes/ dev.ts"
    },
    "fmt": {
        "options": {
            "indentWidth": 4,
            "lineWidth": 120,
            "singleQuote": true
        }
    },
    "importMap": "./import_map.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "preact"
    }
}
