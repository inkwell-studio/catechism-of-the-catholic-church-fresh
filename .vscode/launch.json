    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Web App",
            "type": "node",
            "program": "${workspaceFolder}/dev.ts",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect-brk",
                "-A"
            ],
            "attachSimplePort": 9229
        },
        {
            "request": "launch",
            "name": "Tests",
            "type": "node",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "test",
                "--inspect-brk"
            ],
            "attachSimplePort": 9229
        },
        {
            "request": "launch",
            "name": "Mock Data",
            "type": "node",
            "program": "${workspaceFolder}/catechism/mock-data/build.ts",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect-brk",
                "--allow-read",
                "--allow-write"
            ],
            "attachSimplePort": 9229
        }
    ]
}
